<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Komunity Store{% endblock %}</title>
        {% stylesheets 
            'bootstrap/css/*.min.css' 
            'bundles/komunitystorepage/css/ksPageBundle.css'
            'bundles/komunitystoreuser/css/ksUserBundle.css'
            filter='cssrewrite' 
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        {% javascripts
          'bower_components/angular/angular.min.js'
          'bower_components/angular-http-auth/src/http-auth-interceptor.js'
          'bower_components/angular-ui-router/release/angular-ui-router.min.js'
          'bower_components/jquery/dist/jquery.min.js'
          'bootstrap/js/*.min.js'

          output='compiled/js/app.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% block javascripts %}{% endblock %}

    </head>

    <body class="{% block body_class %}{% endblock %}" ng-app="app">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('komunity_store_index') }}">Komunity Store</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">

                   
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        <div id="wrap" >
            {% block body %}{% endblock %}
            {% block fos_user_content %}{% endblock %}
        </div>
        
    </body>
</html>